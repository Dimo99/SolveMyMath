@model SolveMath.Models.ViewModels.AddCommentViewModel
@{
    ViewBag.Title = "Добави отговор";
}
<h2>Добави отговор</h2>

<form method="post">
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <input type="hidden" name="id" value="@Model.Id"/>
    <input type="hidden" name="topicId" value="@Model.TopicId"/>
    <div class="form-group">
        <label class="control-label" for="form-group-input">Отговор</label>
        <input type="text" class="form-control" id="form-group-input" name="Content" placeholder="Отговор...">
    </div>
    <input type="submit" value="Отговори" class="btn btn-success">
</form>

