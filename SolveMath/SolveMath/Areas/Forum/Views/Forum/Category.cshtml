@model SolveMath.Models.ViewModels.CategoryViewModel
@{
    ViewBag.Title = Model.Name;
}

<h2>@Model.Name</h2>
@Html.ActionLink("Нова тема", "Post", null, new { @class = "btn btn-primary" })
<div class="container">
    <div class="col-lg-3">
        @Html.Action("Categories")
    </div>
    <div id="cont" class="col-lg-offset-2 col-lg-5">
        @Html.Action("Topics",new { page = Model.Page,categoryId = Model.Id})

    </div>
</div>

@section scripts
{

    <script>
        function reload() {
            setTimeout(function() {
                    $("#cont").load("/forum/forum/topics?categoryId=@Model.Id");
                },
                100);
        };
    </script>
}