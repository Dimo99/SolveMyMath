@model SolveMath.Models.ViewModels.TopicViewModel

<div class="container">
    <div class="col-lg-3">
        @Html.Action("Categories")
    </div>
    <div id="cont" class="col-lg-offset-2">
        @Html.Action("TopicPartialView",Model.Id);
    </div>
</div>
@section scripts
{

    <script>
        function reload() {
            setTimeout(function() {

                    $("#cont").load("/forum/forum/topicpartialview/@Model.Id");
                },
                100);
        };
    </script>
}